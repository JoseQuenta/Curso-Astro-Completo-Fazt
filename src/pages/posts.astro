---
const response = await fetch ("https://jsonplaceholder.typicode.com/posts")

const posts = await response.json()


---
<h1>Mis publicaciones</h1>

{
    posts.map(post => {
        return (
            <div>
                <h2>{post.userId}</h2>
                <h3 class="title">{post.title}</h3>
                <p class="subtitle">{post.body}</p>
            </div>
        )
    })
}

<style>
    .title {
        color: red;
    
    }
    .subtitle {
        color: blue;
    }
</style>